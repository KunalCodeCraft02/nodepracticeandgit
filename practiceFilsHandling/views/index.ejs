<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            height: 100vh;
            width: 100%;
            background-color: black;
            color: white;
            display: flex;
            justify-content: center;
            align-items: center;
            flex-direction: column;
        }

        

        input {
            display: flex;
            flex: 1;
            margin-bottom: 1vw;
        }

        .cone{
            margin-top: 3vw;
            display: flex;
            justify-content: center;
            align-items: center;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="cone">
            <form action="/create" method="post">
                <input type="text" name="FileName" placeholder="enter file name">
                <textarea name="textArea" placeholder="Enter text here"></textarea>
                <button value="createFile">Create</button>
            </form>
        </div>
    </div>


    <% if(files.length> 0){ %>
        <% files.forEach(function(val){ %>
            <div class="con">
                <h1>THE FILE IS <%= val %></h1>
                <a href="/file/<%= val %>">Read File</a>
                <a href="/edit/<%= val %>">Edit File</a>
            </div>
            <% }) %>
                <% } else{ %>
                    <h3>NO TASK YET</h3>
                    <% } %>
</body>

</html>